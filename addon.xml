<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.bandcamp"
       name="Bandcamp"
       version="0.0.3"
       provider-name="plule">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.simplejson" version="2.0.10"/>
	<import addon="script.module.parsedom" version="0.9.1"/>
    <import addon="script.module.xbmcswift2" version="2.4.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
     <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">XBMC Plugin for Bandcamp</summary>
    <description lang="en">Bandcamp helps artists sell their music and merch directly to their fans, and helps fans discover new music and directly support those who make it.</description>
	<summary lang="fr">Plugin XBMC pour Bandcamp</summary>
	<description lang="fr">Bandcamp aide les artistes à vendre leur musique directement à leurs fans, et aide les fans à découvrir de la nouvelle musique et à soutenir ceux qui la font.</description>
    <platform>all</platform>
    <language></language>
  </extension>
</addon>
